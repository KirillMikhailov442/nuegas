{
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "bracketSameLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": [
    "^[./]",
    "^@screens/(.*)$",
    "^@components/(.*)$",
    "^@UI/(.*)$",
    "^@layouts/(.*)$",
    "^@store/(.*)$",
    "^@services/(.*)$",
    "^@hooks/(.*)$",
    "^@constants/(.*)$",
    "^@helpers/(.*)$",
    "^@types/(.*)$",
    "^@configs/(.*)$",
    "^@styles/(.*)$",
    "^@assets/(.*)$",
    "^@fonts/(.*)$",
    "^@images/(.*)$",
    "^@videos/(.*)$",
    "^@sounds/(.*)$",
    "^@/(.*)$"
  ],
  "singleAttributePerLine": true,
  "importOrderSortSpecifiers": true
}